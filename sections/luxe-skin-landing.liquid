    font-size: 1rem;
    margin-bottom: 6px;
    color: #222222;
  }

  #luxe-skin-landing-{{ section.id }} .ls-hero-card-detail {
    font-size: 0.82rem;
    color: #888888;
  }

  #luxe-skin-landing-{{ section.id }} .ls-features {
    border-top: 1px solid #e3e3e3;
    padding: 32px 48px 40px;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }

  #luxe-skin-landing-{{ section.id }} .ls-feature-box {
    text-align: center;
    padding: 14px 10px;
  }

  #luxe-skin-landing-{{ section.id }} .ls-feature-icon {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 1px solid #e3a8a2;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 10px;
    font-size: 1.1rem;
  }

  #luxe-skin-landing-{{ section.id }} .ls-feature-title {
    font-size: 0.9rem;
    margin-bottom: 4px;
    font-weight: 500;
  }

  #luxe-skin-landing-{{ section.id }} .ls-feature-text {
    font-size: 0.78rem;
    color: #888888;
  }

  @media (max-width: 960px) {
    #luxe-skin-landing-{{ section.id }} .ls-shell {
      margin: 0;
      border-radius: 0;
      box-shadow: none;
    }

    #luxe-skin-landing-{{ section.id }} .ls-hero {
      grid-template-columns: 1fr;
      padding: 32px 20px;
    }

    #luxe-skin-landing-{{ section.id }} .ls-hero-media {
      order: -1;
      margin-bottom: 8px;
    }

    #luxe-skin-landing-{{ section.id }} .ls-features {
      padding: 24px 20px 28px;
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    #luxe-skin-landing-{{ section.id }} .ls-hero-title {
      font-size: 2rem;
    }

    #luxe-skin-landing-{{ section.id }} .ls-hero-cta-row {
      flex-direction: column;
      align-items: flex-start;
    }
  }

  @media (max-width: 640px) {
    #luxe-skin-landing-{{ section.id }} .ls-features {
      grid-template-columns: 1fr;
    }
  }
</style>

