  LUXE CLEAN - Landing minimal tipo mockup
  Secci√≥n din√°mica: puedes a√±adirla a la home o a una p√°gina espec√≠fica.
{% endcomment %}

<section id="luxe-clean-landing-{{ section.id }}" class="luxe-landing">
  <div class="luxe-shell">
    <!-- HERO -->
    <div class="luxe-hero">
      <div class="luxe-hero-copy">
        {% if section.settings.eyebrow != blank %}
          <div class="luxe-hero-eyebrow">{{ section.settings.eyebrow }}</div>
        {% endif %}

        <h1 class="luxe-hero-title">
          {{ section.settings.heading }}
        </h1>

        {% if section.settings.subheading != blank %}
          <p class="luxe-hero-subtitle">
            {{ section.settings.subheading }}
          </p>
        {% endif %}

        {% assign product = nil %}
        {% if section.settings.product != blank %}
          {% assign product = all_products[section.settings.product] %}
        {% endif %}

        <div class="luxe-hero-cta-row">
          {% if product %}
            <form method="post" action="/cart/add" class="luxe-hero-form">
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              <button type="submit" class="luxe-btn-primary">
                {{ section.settings.cta_label }}
              </button>
            </form>
          {% else %}
            <a href="{{ section.settings.fallback_link | default: '#' }}" class="luxe-btn-primary">
              {{ section.settings.cta_label }}
            </a>
          {% endif %}

          <div class="luxe-hero-price">
            {% if section.settings.custom_price != blank %}
              {{ section.settings.custom_price }}
            {% elsif product %}
              {{ product.price | money }}
            {% endif %}
            {% if section.settings.price_note != blank %}
              <span>{{ section.settings.price_note }}</span>
            {% endif %}
          </div>
        </div>

        {% if section.blocks.size > 0 %}
          <div class="luxe-hero-meta">
            {% for block in section.blocks %}
              {% if block.type == 'meta' %}
                <div class="luxe-hero-meta-item">
                  <span class="luxe-hero-meta-dot"></span>
                  <span>{{ block.settings.text }}</span>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <!-- PRODUCT CARD DERECHA -->
      <div class="luxe-hero-media">
        <div class="luxe-hero-card">
          {% if section.settings.hero_image != blank %}
            <img
              src="{{ section.settings.hero_image | img_url: '800x' }}"
              alt="{{ section.settings.hero_image_alt | escape }}"
              class="luxe-hero-img"
              loading="lazy"
            >
          {% elsif product and product.featured_image %}
            <img
              src="{{ product.featured_image | img_url: '800x' }}"
              alt="{{ product.featured_image.alt | escape }}"
              class="luxe-hero-img"
              loading="lazy"
            >
          {% endif %}

          <div class="luxe-hero-card-label">
            {{ section.settings.product_label }}
          </div>
          <div class="luxe-hero-card-name">
            {% if product %}
              {{ product.title }}
            {% else %}
              {{ section.settings.fallback_product_name }}
            {% endif %}
          </div>
          {% if section.settings.product_detail != blank %}
            <div class="luxe-hero-card-detail">
              {{ section.settings.product_detail }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>

    <!-- FEATURES BOXES -->
    <div class="luxe-features">
      {% for block in section.blocks %}
        {% if block.type == 'feature' %}
          <div class="luxe-feature-box">
            <div class="luxe-feature-icon">
              {{ block.settings.icon }}
            </div>
            <div class="luxe-feature-title">
              {{ block.settings.title }}
            </div>
            <div class="luxe-feature-text">
              {{ block.settings.text }}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

